{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": "bun run ./.github/scripts/start-ralph-session.ts",
        "powershell": "bun run ./.github/scripts/start-ralph-session.ts",
        "cwd": ".",
        "timeoutSec": 10
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "bun run ./.github/hooks/stop-hook.ts",
        "powershell": "bun run ./.github/hooks/stop-hook.ts",
        "cwd": ".",
        "timeoutSec": 30
      }
    ]
  }
}
