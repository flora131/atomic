{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "./plugin/telemetry.ts"
  ],
  "mcp": {
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp",
      "enabled": true
    }
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow",
    "doom_loop": "allow",
    "external_directory": "allow"
  },
  "provider": {
    "github-copilot": {
      "models": {
        "gpt-5.2-codex-high": {
          "id": "gpt-5.2-codex",
          "options": {
            "reasoningEffort": "high"
          }
        },
        "gpt-5.2-codex-xhigh": {
          "id": "gpt-5.2-codex",
          "options": {
            "reasoningEffort": "xhigh"
          }
        },
        "claude-opus-4.5-high": {
          "id": "claude-opus-4.5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 32000
            },
            "output_config": {
              "effort": "high"
            }
          }
        }
      }
    },
    "openai": {
      "models": {
        "gpt-5.2-codex-high": {
          "id": "gpt-5.2-codex",
          "options": {
            "reasoningEffort": "high"
          }
        },
        "gpt-5.2-codex-xhigh": {
          "id": "gpt-5.2-codex",
          "options": {
            "reasoningEffort": "xhigh"
          }
        }
      }
    },
    "anthropic": {
      "models": {
        "claude-opus-4-5-high": {
          "id": "claude-opus-4-5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 32000
            },
            "output_config": {
              "effort": "high"
            }
          }
        }
      }
    }
  }
}
