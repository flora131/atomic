{
  "description": "Ralph Loop plugin stop hook for self-referential loops",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "atomic ralph stop -a claude"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun -e \"require('fs').rmSync(process.env.CLAUDE_PROJECT_DIR+'/.claude/ralph-loop.local.md',{force:true})\""
          }
        ]
      }
    ]
  }
}
